<!DOCTYPE html>
<html>
<head>
  <title>Ateneo GEFPIS</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

    <head>
      <!--Import Google Icon Font-->
      <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <link href='https://fonts.googleapis.com/css?family=Crete+Round' rel='stylesheet' type='text/css'>
      <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>


      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    </head>


    <body class="main-white">
  <!--navbar-dropdown--> 
   <ul id="dropdown1" class="dropdown-content">
      <li><%= link_to "Log Out", destroy_member_t_session_path, :method => :delete, class: 'main-green-text'%></li>
    </ul>  
    <ul id="dropdown2" class="dropdown-content">
      <li><%= link_to "Tutees", tutee_ts_path(), class: 'main-green-text'%></li>
      <li class="divider"></li>
      <li><%= link_to "Progress Reports", tpr_ts_path(), class: 'main-green-text'%></li>
    </ul>
  
    <!--navbar-->
    <nav>
      <div class="nav-wrapper main-white">
          <ul id="nav-mobile" class="left hide-on-med-and-down open-sans">
            <li><%= image_tag("gabay-tbs-logo-white.png", height: '64', class: 'main-green')%></li>

          <% if member_t_signed_in?%>

          <%if current_member_t.membership == "Administration"%> <!--ACCESSIBILITY IF ADMIN-->
            <li><%= link_to "Modules", module_ts_path(), class: 'main-green-text nav-bar-text'%></li>
            <li><%= link_to "Evaluations", evaluation_ts_path(), class: 'main-green-text nav-bar-text'%></li>
            <li><a class="dropdown-button main-green-text nav-bar-text" href="#!" data-activates="dropdown2" data-beloworigin="true">&nbsp;Tutees</font><i class="material-icons right">arrow_drop_down</i></a></li>
            <li><%= link_to "Members", member_ts_path(), class: 'main-green-text nav-bar-text'%></li>
            <li><%= link_to "Worksheet", worksheet_ts_path, class: 'main-green-text nav-bar-text'%></li>  
          </ul>
          <ul id="nav-mobile" class="right hide-on-med-and-down open-sans">
            

            <%elsif current_member_t.membership == "Tutors"%> <!--ACCESSIBILITY IF TUTOR-->
            <ul id="nav-mobile" class="left hide-on-med-and-down open-sans">
            <li><%= link_to "Modules", module_ts_path(), class: 'main-green-text nav-bar-text'%></li>
            <li><%= link_to "Evaluations", evaluation_ts_path(), class: 'main-green-text nav-bar-text'%></li>
<li><a class="dropdown-button main-green-text nav-bar-text" href="#!" data-activates="dropdown2" data-beloworigin="true">&nbsp;Tutees</font><i class="material-icons right">arrow_drop_down</i></a></li>
          </ul>
          <ul id="nav-mobile" class="right hide-on-med-and-down open-sans">

            <%elsif current_member_t.membership == "Data Analysis"%> <!--ACCESSIBILITY IF TUTOR-->
            <ul id="nav-mobile" class="left hide-on-med-and-down open-sans">
             <li><%= link_to "Worksheet", worksheet_ts_path, class: 'main-green-text nav-bar-text'%></li>  
          </ul>
          <ul id="nav-mobile" class="right hide-on-med-and-down open-sans">

            <%elsif current_member_t.membership == "Modules"%> <!--ACCESSIBILITY IF TUTOR-->
            <ul id="nav-mobile" class="left hide-on-med-and-down open-sans">
            <li><%= link_to "Modules", module_ts_path(), class: 'main-green-text nav-bar-text'%></li>
            <li><%= link_to "Evaluations", evaluation_ts_path(), class: 'main-green-text nav-bar-text'%></li>
            <!--<li><a class="dropdown-button main-green-text" href="#!" data-activates="dropdown2" data-beloworigin="true"><font size="4">&nbsp;Tutees</font><i class="material-icons right">arrow_drop_down</i></a></li>-->
          </ul>
          <ul id="nav-mobile" class="right hide-on-med-and-down open-sans">

            <%end%> 

            <li><a class="dropdown-button main-green-text nav-bar-text" href="#!" data-activates="dropdown1" data-beloworigin="true">Hello, <%= current_member_t.first_name%>!<i class="material-icons pull right">arrow_drop_down</i></a></li>
          </ul>

          <%else%>
          <ul id="nav-mobile" class="left hide-on-med-and-down">
              <li><a class="main-green-text crete-round"><font size="5">GABAY ERYA FORMATION PROGRAM INFORMATION SYSTEM (GEFPIS)</font></a></li>
            </ul>
          <%end%>
      </div>
    </nav>


<%= yield %>
</body>

</html>